{
  "name": "Death to green buttons",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Disable green Merge button on Github",
  
  "permissions": [
    "tabs", "https://github.com/*/*/pull/*"
  ],
  "content_scripts": [
    {
      "matches": [ "https://github.com/*/*/pull/*" ],
      "js": [ "myscript.js" ]
    }
  ]
}
